	        <li><a href="#">Contacts</a></li>


	        <li class="divider"></li>
	        <%= render 'shared/language_selector'  %>
	      </ul>
	    </section>
	  </nav>
	<div class="nav_bar_border_bottom"></div>

	  <!-- End Top Bar -->

  <%= yield %>


