<div class="row content">
  <div class="small-9 columns">
    <%= render 'shared/flasher' %>
      <table>
        <thead>
          <tr>
            <th>Id</th>
            <th>Name lv</th>
            <th>Name ru</th>
            <th>Slug</th>
            <th>#</th>
            <th></th>
            <th></th>
          </tr>
        </thead>

      <% @categories.each do |category| %>
      <tbody>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.category_name_lv %></td>
          <td><%= category.category_name_ru %></td>
          <td><%= category.category_slug %></td>
          <td><%= category.places.size %></td>
          <td><%= link_to 'Edit', edit_category_path(category) %></td>
          <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } if current_user.id == 1 %></td>
        </tr>
        </tbody>
      <% end %>
      </table>
  </div>
  <div class="small-3 columns">
    <%= render 'shared/admin/admin_panel' %>
  </div>  
</div>

