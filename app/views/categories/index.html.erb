<div class="row">
  <div class="small-8 small-centered columns">
      <h1>Listing categories</h1>

      <table>
          <thead>

        <tr>
          <th>Id</th>
          <th>Name lv</th>
          <th>Name ru</th>
          <th>Slug</th>
          <th>#</th>
          <th></th>
          <th></th>
        </tr>
        </thead>

      <% @categories.each do |category| %>

      <tbody>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.category_name_lv %></td>
          <td><%= category.category_name_ru %></td>
          <td><%= category.category_slug %></td>
          <td>
                <% count = 0 %>
                <% category.places.each do |place| %>
                  <% count += 1 %>
                <% end %>

                <%= count %>

          </td>
          <td><%= link_to 'Edit', edit_category_path(category) %></td>
          <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        </tbody>
      <% end %>
      </table>
    <%= link_to 'New Category', new_category_path, class: "small button" %>
  </div>
</div>

