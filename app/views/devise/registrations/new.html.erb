<div class="row">
  <div class="small-12 small-centered columns"></br>
  	<%= render "shared/flasher" %>
  </div>
</div>

<div class="row">
  <div class="small-4 small-centered columns">

<h3 class="subheader"><%= t(:registration) %></h3>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), class: 'custom') do |f| %>
  

    <%= f.input :email, :required => true, :autofocus => true %>

    <% if f.object.password_required? %>

	    <%= f.input :password, :required => true, label: t(:password) %>
	    <%= f.input :password_confirmation, :required => true, label: t(:password_confirmation) %>
    <% end %>


    <%= f.button :submit, t(:sign_up), class: 'small button' %>

<% end %>

<%= render "devise/shared/links" %>


</div>
</div>
