<%= form_for(@contact) do |f| %>
  
    <% field_set_tag "Contact with us " do %>
    

      <% if flash[:notice] %>
        <div class="alert-box success">
          <h5><%= flash[:notice] %></h5>
          <a href="#" class="close">&times;</a>
        </div>
      <% end  %>

      <% if @contact.errors.any? %>
      <div class="alert-box alert margin-left" id="errorExplanation">
        <h4 class="alert_header"><%= pluralize(@contact.errors.count, "error") %> prohibited
            this post from being saved:</h4>
        <ul>
        <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
        <a href="#" class="close">&times;</a>
      </div>
      <% end %>

      <div class="row">
        <div class="large-6 columns">
          <%= f.label :email, "Your email" %>
          <%= f.text_field :email %>
        </div>

      </div>


      <div class="row">
        <div class="large-12 columns">
          <%= f.label :body, "Your message for us" %>
          <%= f.text_area :body %>
        </div>
      </div>

    <%= f.submit class: 'small button'  %>
  <% end %>
<% end  %>