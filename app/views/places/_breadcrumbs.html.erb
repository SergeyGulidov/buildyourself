<div id="bread" class="large-6 small-4 columns">
	<div class="row">
		<div class="row">
			<ul class="right">
				<li>
					<% @place.categories.each do |category| %>
			           <%= link_to category.category_name, 
			           		{ controller: :places, action: :index, category: category.category_slug}, 
							class: "crumbs" %>
					<% end %>
				</li>
				<li>
					<% @place.intervals.each do |interval| %>
						<%= link_to interval.interval_name,
							{ controller: :places, action: :index, interval: interval.interval_slug}, 
							class: "crumbs" %>
					<% end  %>
				</li>
			</ul>
		</div>
		<div class="row">
			<ul id="second" class="right ">
				<li>
					<% @place.types.each do |type| %>
						<%= link_to type.type_name, 
							{ controller: :places, action: :index, type: type.type_slug}, 
							class: "crumbs" %>
					<% end  %>
				</li>
			</ul>
		</div>
	</div>
</div>