<% @place = Place.sponsor.first %>
<% unless @place.blank? %>
<h4 id="title"><%= link_to @place.name, place_path(@place)%></h4>
	<dl class="sub-nav">
		<dd class="active">
        <%= link_to "This week sponsor", place_path(@place) %>
	  </dd>
	  <dd class="active">
        <%= link_to "With review", 
            place_path(@place, :anchor => "review") if @place.with_review == 1 %>
	  </dd>
	</dl>



<div class="panel">
	  <ul class="small-block-grid-3 ">

          <% for photo in @place.photos %>
              <li>
                <%= link_to (image_tag photo.photo_url(:thumb).to_s, class: "th radius"),
                    photo.photo_url(:full).to_s, rel: "facebox" %>
              </li>
          <% end %>
        </ul>
        <p><%= truncate(@place.message, :length => 250, :separator => '. ', :omission => '') %>
						<%= link_to "...", place_path(@place)%></p>
		<h6 class="right"><small><%= link_to "read more...", place_path(@place)%></small></h6>
</div>
<% end %>