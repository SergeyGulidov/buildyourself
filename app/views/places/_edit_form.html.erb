<%= simple_nested_form_for @place, html: {class: 'chzn-select', multipart: true  } do |f| %>
    <% field_set_tag t(:edit_your_place) do %>

    <%= render 'shared/errors', object: @place %>

      <div class="row">
        <div class="large-6 columns">
          <%= f.association :country, collection: @countries, label: t(:country), :label_method => :country_name %>
        </div>

        <div class="large-6 columns">
          <%= f.association :city, collection: @cities, label: t(:city), :label_method => :city_name %>
        </div>
      </div>

      <div class="row">
        <div class="large-4 columns">
          <%= f.input :street, label: t(:street_address) %>
        </div>

        <div class="large-4 columns">
          <%= f.input :name, label: t(:name_for_place) %>
        </div>
        <div class="large-4 columns">
          <%= f.input :month_price, label: t(:month_price) %>
        </div>
      </div>

      <div class="row ">
        <div class="large-3 columns">
          <%= f.association :categories, collection: @categories, label: t(:place_category),
            :label_method => :category_name, include_blank: true, :input_html => { :multiple => false } %>
        </div>
        <div class="large-3 columns">
          <%= f.association :types, collection: @categories, as: :grouped_select, 
            group_label_method: :category_name, group_method: :types,
            label_method: :type_name, value_method: :id, label: t(:type_category), include_blank: true%>
        </div>
        <div class="large-3 columns">
          <%= f.input :age_min, label: t(:min_age) %>
        </div>
        <div class="large-3 columns">
          <%= f.input :age_max, label: t(:max_age) %>
        </div>
      </div>


      <div class="row ">
        <div class="large-12 columns">
          <p class="important_text"><%= t(:forbidden_category) %></p>
        </div>
      </div>



      <div class="row add_margin">
        <div class="large-12 columns add_photo">
			<ul class="small-block-grid-6 clearing-thumbs" data-clearing ">
              <% for photo in @place.photos %>
                  <li>
                  	
                  	<div class="photo">
                  <%= link_to (image_tag photo.photo_url(:thumb).to_s, 
                    height: '80', width: '100', class: "th"),
                   photo.photo_url.to_s %>
                  	</div>
                  	<div class="remove_photo_icon">&nbsp&nbsp&nbsp
	                  	<%= link_to "", photo, :method => :delete, 
	                  		class: "general-enclosed foundicon-remove " %>
                  	</div>
                  	
                  </li>
              <% end %>
            </ul>
        </div>
      </div>

      <div class="row photos">
        <div class="large-7 columns add_photo">

            <% f.fields_for :photos do |photo|  %>
              <%= photo.file_field :photo %>
              <%= photo.link_to_remove "", 
                class: "general-enclosed foundicon-remove " %>
            <% end %>
  
            

            <%= f.link_to_add t(:add_photos), :photos, class: "small button" %>
            <p class="important_text">
              <%= t :photo_how_to %> <%= link_to t(:contact_with_us), new_contact_path %>
            </p>

          </div>
      </div>
      <div class="row">
        <div class="large-12 columns">
            <%= f.input :message_ru, label: t(:message_for_ru), :as => :text %>
        </div>
      </div>

      <div class="row">
        <div class="large-12 columns">
            <%= f.input :message_lv, label: t(:message_for_lv), as: :text %>
        </div>
      </div>

    <%= f.button :submit, t(:add_place), class: 'small button'  %>
  <% end %>
<% end  %>