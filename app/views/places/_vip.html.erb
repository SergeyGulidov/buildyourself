	<div class="row height_10"></div>
	<% @type_vip.each do |place| %>

		<% @place = place %>
		
		<div class="vip_zone">	
			<div class="row">
				  <div class="small-6 columns">
					<h5 id="title"><%= link_to place.name, place_path(place)%><%= link_to ">> edit", controller: 'places', action: 'make_approve', id: place.id %></h5>
				  </div>   
				  <div class="small-6 columns">
				 	 <%= render 'breadcrumbs', object: @place %>
				  </div>
			</div>

			<div class="row">
				<div class="large-6 small-12 columns">
					<p><%= simple_format(truncate( place.message, :length => 200, :separator => '. ', :omission => '.') )%></p>

					<h6><small><%= link_to t(:read_more), place_path(place)%></small></h6>		
				</div>

				<div class="large-6 small-12 columns photos_for_roll">
					<ul class="large-block-grid-3 clearing-thumbs" data-clearing >

						<% place.photos.take(3).each do |photo| %>
							<li>
								<%= link_to (image_tag photo.photo_url(:thumb).to_s, 
									height: '60', width: '100', class: "th radius"),
								 photo.photo_url.to_s %>
							</li>
						<% end %>

						
					</ul>
				</div>
			</div>
		</div>
		<% break %>

	<% end %>

