	<div class="row height_10"></div>
	<% @type_vip.each do |place| %>

		<% @place = place %>
		
		<div class="vip_zone round">	
			<div class="row ">
				  <div class="large-6 small-8 columns">
					<h5 id="title"><%= link_to place.name, place_path(place)%></h5>
					
					<%= render 'subnav', object: @place %>

				  </div>
				  
		          
		          <%= render 'breadcrumbs', object: @place %>
			</div>

			<div class="row">
				<div class="large-6 small-12 columns">
					<p><%= truncate(place.message, :length => 200, :separator => '. ', :omission => '') %>
							<%= link_to "...", place_path(place)%></p>

					<h6><small><%= link_to "read more...", place_path(place)%></small></h6>		
				</div>

				<div class="large-6 small-12 columns ">
					<ul class="large-block-grid-3">

						<% place.photos.take(3).each do |photo| %>
							<li>
								<%= link_to (image_tag photo.photo_url(:thumb).to_s, 
									height: '60', width: '100', class: "th radius"),
								 photo.photo_url.to_s, rel: "facebox" %>
							</li>
						<% end %>

						
					</ul>
				</div>
			</div>
		</div>
		<div class="row height_30"></div>
		<% break %>

	<% end %>

