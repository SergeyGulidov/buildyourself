<% unless @place.feeds.blank? %>
	<div class="feeds">
		    <% @place.feeds.each do |feed| %>
		    	<i>
		    		<%= feed.created_at.strftime("%d.%m.%Y  %H:%M") %>
					<% if can? :destroy, feed %>
		               <%= link_to "", feed, method: :delete, data: { confirm: t(:sure_question) }, class: "general foundicon-remove" %>
		            <% end %>
		    	</i>
		        <div class="feed"><%= simple_format(feed.message) %></div>
		    <% end %>

	</div>
<% end %>

<% unless @feed.blank? %>
	<br>
	<a href="#" data-reveal-id="feeds_new" class="button tiny secondary right radius"><%= t(:create_news) %></a>
	<div id="feeds_new" class="reveal-modal medium">
	  <h2><%= t(:create_news) %></h2>
		<%= render 'feeds/form' %>
	  <a class="close-reveal-modal">&#215;</a>
	</div>
<% end %>