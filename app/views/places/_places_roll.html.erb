<% @places.each do |place| %>
	  <div class="large-5 columns place_box">
	  	<h5 id="title"><%= link_to place.name, place_path(place)%></h5>

	  	<%= render 'shared/subnav'  %>
				


	  	<p><%= truncate(place.message, :length => 200, :separator => '. ', :omission => '') %>
	  			<%= link_to "...", place_path(place)%></p>

	  	<h6><small><%= link_to "read more...", place_path(place)%></small></h6>




	  </div>
	  <div class="large-7 columns ">

	  		<ul class="breadcrumbs bread-right">
	  			<% place.types.each do |type| %>
            		<li><%= link_to type.type_name, type%></li>
            	<% end  %>

			  <li><a href="#">Home</a></li>
			  <li class="unavailable"><a href="#">Gene Splicing</a></li>
			</ul>




            <ul class="large-block-grid-3 photo_block">
            	<% place.photos = place.photos.take(3) %>
            	<% place.photos.each do |photo| %>
            		<li>
            			<%= link_to (image_tag photo.photo_url(:thumb).to_s, class: "th"),
            			 photo.photo_url(:full).to_s, rel: "facebox" %>
            		</li>
            		<% end %>

            		
         
            </ul>



	  	
	  </div>
	<hr>
<% end %>

<%= paginate @places %>