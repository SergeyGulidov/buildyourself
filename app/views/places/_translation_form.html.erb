

  <%= form_for(@place) do |f| %>

    <% field_set_tag "Check in your place " do %>
    
      <% if @place.errors.any? %>
      <div class="alert-box alert margin-left" id="errorExplanation">
        <h4 class="alert_header"><%= pluralize(@place.errors.count, "error") %> prohibited
            this post from being saved:</h4>
        <ul>
        <% @place.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
        <a href="#" class="close">&times;</a>
      </div>
      <% end %>

      <div class="row">
        <div class="large-6 columns">
          <%= f.label :country, "Country" %>
          <%= f.text_field :country %>
        </div>

        <div class="large-6 columns">
          <%= f.label :city, "City" %>
          <%= f.text_field :city %>
        </div>
      </div>

      <div class="row">
        <div class="large-6 columns">
          <%= f.label :street, "Street" %>
          <%= f.text_field :street %>
        </div>

        <div class="large-6 columns">
          <%= f.label :name, "Name for place" %>
          <%= f.text_field :name %>
        </div>
      </div>

      <div class="row">
        <div class="large-4 columns">
          <%= f.label :email, "Email" %>
          <%= f.text_field :email %>
        </div>

        <div class="large-3 columns">
          <%= f.label :phone, "Phone number" %>
          <%= f.text_field :phone %>
        </div>



        <div class="large-5 columns">
          <%= f.label :website, "Website" %>
          <%= f.text_field :website %>
        </div>
      </div>

      <div class="row">
        <div class="large-12 columns">
          <div class="check_box_hightlight">
            <%= f.label :manytypes,
                 "If you have many types or club, please check this box in.",
                 class: "right inline" %>
              <%= f.check_box :manytypes, id: "right-label" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="large-12 columns">
          <%= f.label :message, "Message for Russian speakers" %>
          <%= f.text_area :message %>
        </div>
      </div>

      <div class="row">
        <div class="large-12 columns">
          <%= f.globalize_fields_for :lv do |g| %>
            <%= f.label :message, "Message for Latvian speakers" %>
            <%= f.text_area :message %>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="large-12 columns">
          <%= f.globalize_fields_for :en do |g| %>
            <%= f.label :message, "Message for English speakers" %>
            <%= f.text_area :message %>
          <% end %>
        </div>
      </div>

    <%= f.submit class: 'small button'  %>
  <% end %>
<% end  %>