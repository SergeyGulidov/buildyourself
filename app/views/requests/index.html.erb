<div class="row content">
  <div class="small-8 small-centered columns">
    <h5>Listing requests</h5>

    <table>
      <tr>
        <th>Phone</th>
        <th>Address</th>
        <th>When</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @requests.each do |request| %>
      <tr>
        <td><%= request.phone %></td>
        <td><%= request.address %></td>
        <td><%= request.when %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </table>
  </div>
</div>
