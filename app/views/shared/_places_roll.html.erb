<% @places.each do |place| %>


		<div class="row">
			  <div class="large-5 columns">
				<h5 id="title"><%= link_to place.name, place_path(place)%></h5>
				<dl class="sub-nav">
				  <dd class="active">
                    <%= link_to "With review", 
                        place_path(place, :anchor => "review") if place.with_review == 1 %>
				  </dd>
				  <dd class="active">
				  	<%= link_to '', place_path(place, :anchor => "disqus_thread"),
				  		:"data-disqus-identifer" => place.id %>
				  </dd>
					 <dd class="active"><a href="#"><%= pluralize place.votes, "vote" %></a></dd>
					 <% if current_user && current_user.can_vote_for?(place) %>
						<dd>
							<%= link_to "", vote_place_path(place, value: 1), method: "post",
								class: "general foundicon-up-arrow" %>
							<%= link_to "", vote_place_path(place, value: -1), method: "post",
								class: "general foundicon-down-arrow"  %>
						</dd>
					 <% end %>
				</dl>
			  </div>

			  <div class="large-7 columns ">
					<ul class="breadcrumbs bread-right">
						<% place.types.each do |type| %>
								<li><%= link_to type.type_name, type: type.type_slug %></li>
							<% end  %>
					  <li><a href="#">Home</a></li>
					  <li class="unavailable"><a href="#">Gene Splicing</a></li>
					  <li class="current"><a href="#">Cloning</a></li>
					</ul>
			  </div>
		</div>


		<div class="row">
			<div class="large-6 columns">
				<p><%= truncate(place.message, :length => 250, :separator => '. ', :omission => '') %>
						<%= link_to "...", place_path(place)%></p>

				<h6><small><%= link_to "read more...", place_path(place)%></small></h6>		
			</div>

			<div class="large-6 columns ">
				<ul class="large-block-grid-3 ">
					<% place.photos = place.photos.take(3) %>
					<% place.photos.each do |photo| %>
						<li>
							<%= link_to (image_tag photo.photo_url(:thumb).to_s, class: "th radius"),
							 photo.photo_url(:full).to_s, rel: "facebox" %>
						</li>
					<% end %>
				</ul>
			</div>
		</div>

	<hr>
<% end %>

<%= paginate @places %>


<script type="text/javascript">
    var disqus_shortname = 'buildyourself';
    (function () {
        var s = document.createElement('script'); s.async = true;
        s.type = 'text/javascript';
        s.src = '//' + disqus_shortname + '.disqus.com/count.js';
        (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
    }());
</script>