<div class="row collapse filter">

      <%= form_tag(root_path, :method => 'get', class: 'chzn-select') do %>


        <div id="category_small_filter" class=" small-4 columns">
          <%= select_tag :category,
             options_from_collection_for_select( @categories, 'category_slug', 'display_name'),
              label_method: :category_name,
             :include_blank => true, :prompt => t(:category)  %>
        </div>

        <div id="type_small_filter" class="small-4 columns">
          <%= grouped_collection_select(:f, :type,  @categories,
                :types, :display_name, :type_slug, :display_name, include_blank: true, :prompt => t(:type), 
                :onchange => 'this.form.submit();') %>
        </div>

        <div class="small-2 columns">
          <%= text_field_tag :age, nil, :placeholder => t(:interval), :maxlength => 3 %>
        </div>



        <div class="small-2 columns">
          <div class="large-12 columns search ">
            <%= image_submit_tag("search.png") %>
          </div>
        </div>
    <% end %>
</div>
