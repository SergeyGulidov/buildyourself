
<% unless @recent_posts.blank? %>
	<div class="panel radius right_panel">
	<ul class="recent">
		<li class="first"><h5><%= link_to t(:recent_added_blog_posts), posts_path %></h5></li>
	  <% @recent_posts.each do |post| %>
	    <li class="li_second"><%= link_to post.title, post %></li>
	  <% end %>
	</ul>
	</div>
<% end  %>