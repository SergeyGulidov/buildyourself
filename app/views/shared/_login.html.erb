<div class="panel radius right_panel">
	<% if user_signed_in?  %>
		<ul class="recent ">
		  	<li class="first">
				<h5><%= link_to current_user.name.blank? ? current_user.email : current_user.name, current_user %> 
				<%= link_to t(:logout), destroy_user_session_path, method: :delete, class: "right  button tiny" %></h5>
			</li>
			<li><b class="general foundicon-location"></b> <%= link_to t(:add_new_place), :controller => :places, :action => :new %></li>
			<li><b class="social foundicon-torso"></b> <%= link_to t(:user_status), current_user %></li> 
			<li><b class="general foundicon-add-doc"></b> <%= link_to t(:create_post), new_post_path %></li>
			<li><b class="general foundicon-settings"></b> <%= link_to t(:profile), edit_user_path(current_user) %></li>
		</ul>
		<ul class="your_place_list">
			<% unless @current_user_places.blank? %>
				<hr>
		  		<% @current_user_places.each do |place| %>
				    <li>
					    <%= raw (t(:published)) if place.approved == 1 %>
					    <%= raw (t(:waiting)) if place.approved == 0 %>
					    <%= raw (t(:need_info)) if place.approved == 2 %>
					    <%= link_to place.name, place %>
		                <%= link_to "", edit_place_path(place), class: " general foundicon-edit" %>
		                </li>
				    </li>
				<% end %>
			<% end %>
			<% unless @current_user_posts.blank? %>
				<br>
				<hr>
				<% @current_user_posts.each do |post| %>
			      <li>
			      <%= raw (t(:published)) if post.approved == 1 %>
			      <%= raw (t(:waiting)) if post.approved == 0 %>
			      <%= link_to post.title, post %>
			      <%= link_to "", edit_post_path(post), class: " general foundicon-edit" %>
			      </li>
	            <% end %>
            <% end %>
	      </li>
		</ul>
	<% else %>
	  	<ul class="recent ">
		  	<li class="first">
		  		<h5>
			  	<%= link_to t(:login), new_user_session_path, class: "with_border" %> 
			  	<%= t(:or) %> 
			  	<%= link_to t(:sign_up), new_user_registration_path, class: "with_border" %>
			  </h5>
			</li>
			  <li> &raquo;
			  	<%= link_to t(:sign_in_with_twitter), user_omniauth_authorize_path(:twitter)  %> 
			  </li>
			  <li> &raquo;
			  	<%= link_to t(:sign_in_with_google), user_omniauth_authorize_path(:google_oauth2)  %>
			  </li> 
			  <li> &raquo;
			  <%= link_to t(:sign_in_with_facebook), user_omniauth_authorize_path(:facebook)  %>
			</li>
			<hr>
			<b data-reveal-id="for_what"><li> <%= link_to t(:for_what), new_user_registration_path, class: "button small right" %></li></b>
			<br>
		</ul>
	<% end  %>
</div>

<div id="for_what" class="reveal-modal">
	<h4><%= t(:what_you_get) %></h4>
	<h6><%= t :get_rating %></small></h6>
	<h6><%= t :edit_info %></h6>
	<p class="important_text"><%= t(:our_mission) %></p>
  <a class="close-reveal-modal">&#215;</a>
</div>