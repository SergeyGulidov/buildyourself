
<div class="panel radius right_panel">
			<% if user_signed_in?  %>
			  <li class="first">
			  <dl class="sub-nav ">
		  		<dt><b><%= current_user.name.blank? ? current_user.email : current_user.name %></b></dt>
			  		<dd class="active"><%= link_to t(:profile), 
			  				edit_user_path(current_user) %></dd>
			  		<dd class="active"><%= link_to t(:logout), 
			  				destroy_user_session_path, method: :delete %></dd>
					</dd>
				</dl>

				</li>


		  		
		  		<% unless @current_user_places.blank? %>
		  			<ul class="your_place_list">
				  		<% @current_user_places.each do |place| %>
						    <li>
							    <%= raw (t(:published)) if place.approved == 1 %>
							    <%= raw (t(:waiting)) if place.approved == 0 %>
							    <%= raw (t(:need_info)) if place.approved == 2 %>
							    <%= link_to place.name, place %>
				                <%= link_to "", edit_place_path(place), class: "comments general foundicon-edit" %>
				                </li>
						    </li>
						<% end %>
					</ul>
				<% else %>
					<dl class="sub-nav ">
			  		<dd class="label">
			  			<%= link_to t(:add_new_place), :controller => :places, :action => :new  %>
			  		</dd>
			  		<dd class="label">
			  			<%= link_to t(:nav_request), new_request_path %>
			  		</dd>
					</dl>

				<% end %>

		  	<% else %>
		  	<li class="first">
			  <dl class="sub-nav ">
				  <dd class="active"><%= link_to t(:login), new_user_session_path %></dd>
				  <dd class="active"><%= link_to t(:sign_up), new_user_registration_path %></dd>
				  <dd data-reveal-id="for_what"> <%= link_to t(:for_what), new_user_registration_path %></dd>
			  </dl>
			  </li>
			  <ul class="side_navigation">
				  <li> &raquo;
				  	<%= link_to t(:sign_in_with_twitter), user_omniauth_authorize_path(:twitter)  %> 

				  </li>
				  <li> &raquo;
				  	<%= link_to t(:sign_in_with_google), user_omniauth_authorize_path(:google_oauth2)  %>

				  </li> 
				  <li> &raquo;
				  <%= link_to t(:sign_in_with_facebook), user_omniauth_authorize_path(:facebook)  %>

				</li>
			   </ul>
			  
		  <% end  %>
</div>





<div id="for_what" class="reveal-modal">
	<h4><%= t(:what_you_get) %></h4>
	<h6><%= t :get_rating %></small></h6>
	<h6><%= t :edit_info %></h6>
	<p class="important_text"><%= t(:our_mission) %></p>
  <a class="close-reveal-modal">&#215;</a>
</div>