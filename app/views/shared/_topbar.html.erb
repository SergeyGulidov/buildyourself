<nav class="top-bar" >

		<ul class="title-area">
		  <li class="name"><h1><%= link_to "Yoda.lv", root_path %></h1></li>
		  <li class="toggle-topbar menu-icon"><a href="#"><span>menu</span></a></li>
		</ul>

		<section class="top-bar-section">
			<ul class="right">
				<li class="<%= 'active' if current_page?(:controller => 'places', :action => 'index') %>">
				<%= link_to t(:home), root_path %>
				</li>

				<li class="<%= 'active' if current_page?(:controller => 'posts', :action => 'index') %>">
				<%= link_to t(:blog), posts_path %></li>
