					<li>
		              <%= link_to t(:sign_up), new_user_registration_path %>
		            </li>

		            <li>
						<%= link_to t(:login), new_user_session_path %>
		            </li>
		        <% end  %>
	            
				<li class="<%= 'active' if current_page?(:controller => 'contacts', :action => 'new') %>">
	              <%= link_to t(:contact_with_us), :controller => :contacts, :action => :new %>
