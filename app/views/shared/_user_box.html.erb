<div class="panel without_border">
  <ul class="small-block-grid-1 ">
      <li>
        <% if @place.user.avatar.blank? %>
          <%= image_tag "blank.png", height: '154', width: '254', class: "th radius"  %>
        <% else  %>
          <%= image_tag @place.user.avatar.url, height: '154', width: '254', 
          	class: "th"  %>
        <% end  %>
      </li>

      <li><h4 style="text-align: center"><%= link_to @place.user.name, @place.user unless @place.user.name.blank? %></h4></li>
      <li class="about_block"><p><%= simple_format(@place.user.about) unless @place.user.about.blank? %></p><hr></li>

      <li><p class="contact_info">

      <%= @place.user.email %><br>
      <% unless @place.user.web_site.blank?  %>
        <%= @place.user.web_site  %> <br>
      <% end %>

      <% unless @place.user.phone.blank?  %>
        <%= "(+371) - #{@place.user.phone}" %><br>
      <% end %>
      
  	</p></li>

  </ul>
</div>
<%= render 'blog_list' %>

<% unless @other_user_places.blank? %>
  <div class="panel radius right_panel">
    <ul class="recent">
      <li class="first"><h5> <span class="general foundicon-location"> </span> <%= t (:more_places_from_user)  %></h5></li>
      <% @other_user_places.each do |place| %>
        <%= link_to place do  %>
          <li class="li_second">
             <%= place.name %> 
          </li>
        <% end  %>
      <% end %>
    </ul>
    </div>
<% end  %> 


<% if @place.user.comments == 1 %>
  <script type="text/javascript">
    var disqus_shortname = 'buildyourself';
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
  </script>

  <noscript><%= t(:enable_js) %></noscript>
<% end  %>