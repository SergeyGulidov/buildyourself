<%= simple_form_for(@feed) do |f| %>
  <%= f.error_notification %>

  <%= f.input :message, as: :text, label: false, input_html: { maxlength: 255 } %>
  <%= f.hidden_field :place_id, :value => @place.id %>
  <div class="form-actions">
    <%= f.button :submit, class: "tiny button radius secondary right" %>
  </div>
<% end %>
