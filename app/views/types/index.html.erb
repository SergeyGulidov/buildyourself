<div class="row content">
  <div class="small-8 small-centered columns">
    <%= render 'shared/flasher' %>
    <%= render 'shared/admin/admin_panel' %>
      <table>
        <thead>
          <tr>
            <th>Id</th>
            <th>Name lv</th>
            <th>Name ru</th>
            <th>Slug</th>
            <th>#</th>
            <th></th>
            <th></th>
          </tr>
        </thead>

      <% @types.each do |type| %>

      <tbody>
        <tr>
          <td><%= type.id %></td>
          <td><%= type.type_name_lv %></td>
          <td><%= type.type_name_ru %></td>
          <td><%= type.type_slug %></td>
          <td><%= type.places.size %></td>
          <td><%= link_to 'Edit', edit_type_path(type) %></td>
          <td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' } if current_user.id == 1 %></td>
        </tr>
        </tbody>
      <% end %>
      </table>
    </div>
</div>