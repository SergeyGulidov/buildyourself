<div class="row content">
  <div class="small-9 columns">
      <%= render 'shared/flasher' %>

      <table>
        <thead>

          <tr>
            <th>Id</th>
            <th>Name lv</th>
            <th>Name ru</th>
            <th>Slug</th>
            <th>#</th>
            <th></th>
            <th></th>
          </tr>
        </thead>

      <% @cities.each do |city| %>
      <tbody>
        <tr>
          <td><%= city.id %></td>
          <td><%= city.city_name_lv %></td>
          <td><%= city.city_name_ru %></td>
          <td><%= city.city_slug %></td>
          <td><%= city.places.size %></td>
          <td><%= link_to 'Edit', edit_city_path(city) %></td>
          <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } if current_user.id == 1 %></td>
        </tr>
        </tbody>
      <% end %>
    </table>
  </div>
  <div class="small-3 columns">
    <%= render 'shared/admin/admin_panel' %>
  </div>
</div>


