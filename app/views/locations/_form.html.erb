<%= simple_form_for(@location) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :city_lv %>
    <%= f.input :city_ru %>
    <%= f.input :country_lv, as: :text %>
    <%= f.input :country_ru, as: :text %>
    <%= f.input :location_slug %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
