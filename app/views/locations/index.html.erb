<h1>Listing locations</h1>

<table>
  <tr>
    <th>City lv</th>
    <th>City ru</th>
    <th>Country lv</th>
    <th>Country ru</th>
    <th>Slug</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.city_lv %></td>
    <td><%= location.city_ru %></td>
    <td><%= location.country_lv %></td>
    <td><%= location.country_ru %></td>
    <td><%= location.slug %></td>
    <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

