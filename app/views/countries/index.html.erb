<div class="row content">
  <div class="small-8 small-centered columns">
    <%= render 'shared/flasher' %>
    <%= render 'shared/admin/admin_panel' %>
      <table>
        <thead>
          <tr>
            <th>Id</th>
            <th>Name lv</th>
            <th>Name ru</th>
            <th>Slug</th>
            <th>#</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
      <% @countries.each do |country| %>
      <tbody>
        <tr>
          <td><%= country.id %></td>
          <td><%= country.country_name_lv %></td>
          <td><%= country.country_name_ru %></td>
          <td><%= country.country_slug %></td>
          <td><%= country.places.size %></td>
          <td><%= link_to 'Edit', edit_country_path(country) %></td>
          <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } if current_user.id == 1 %></td>
        </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>

