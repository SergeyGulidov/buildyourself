<% provide(:title, @post.title) %>

<% meta :description => "#{truncate( @post.message, :length => 150, :separator => '. ', :omission => '.')}",
        :keywords => ""
%>


<div class="row show_posts post content">
  <div class="large-12 small-12 columns">

    <%= render 'shared/flasher' %>

    <div class="row content">

      
      <div class="small-12 large-9 columns">

          


          <div class="row">
            <div class="large-5 small-5 columns">
              <h1><%= @post.title %>
                <% if can? :edit, @post %>
                  <%= link_to "", edit_post_path(@post), class: "comments general foundicon-edit" %>
                <% end %>
              </h1>
              <h2><%= t(:published_at) + "  " + @post.created_at.strftime(" %d.%m.%Y ") + @post.created_at.strftime(" %H:%M ")  %></h2>
              <% unless @post.user.blank? %>
                <h2><%= t(:posted_by) %>  <%= link_to @post.user.name, @post.user %></h2>
              <% end  %>

              
              <% unless @post.image.blank? %>
                <ul class="clearing-thumbs" data-clearing >
                    <li><%= link_to (image_tag @post.image.url(:thumb), class: "th radius"), @post.image.url %></li>
                </ul>
              <% end  %>
            </div>

            <div class="large-7 small-7 columns top_margin">
              <%= simple_format(@post.message) %>
              <hr>
              <div id="disqus_thread"></div>
            </div>

          </div>
      </div>


      <div class="large-3 columns hide-for-small top_margin">
          <%= render 'shared/right_navigation' %>
          <%= render 'search' %>
          <%= render 'user_posts' if current_user %>
      </div>
    </div>
  </div>
</div>



  <script type="text/javascript">
    var disqus_shortname = 'buildyourself';
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
  </script>

  <noscript><%= t(:enable_js) %></noscript>