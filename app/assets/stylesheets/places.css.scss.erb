/************* FEED  ******************/

.feeds .feed{ padding: 10px 10px 1px 10px; margin-top: 5px;}

.feeds i {font-size:12px;  font-weight: bolder;}
.remaining {vertical-align: center; font-size:12px; line-height: 30px; margin-left: 5px;}

.feeds .feed {
	background-color: #26B262!important; 
	padding: 10px 10px 5px 10px;
	margin-bottom: 10px;
	-webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;
    opacity:0.8;
	filter:alpha(opacity=80);
}

.feeds .feed:hover{
    opacity:1;
	filter:alpha(opacity=100);
}


.feeds .feed{
	a{
		border-bottom: 1px solid white;
		color: white;
	}
	p{
		color: white;
	}
}



