/*************** Breadcrumbs ************************/

#bread ul {
	width: 100%;
	list-style-type: none ;
	margin: 0px 20px 4px 0px ;
	padding: 7px 5px 7px 5px ;
}

#second{
	margin-top: -10px!important;
}

#bread ul.right {
	text-align: right ;
	font-size: 11px;
	font-weight: bolder;
}
 
#bread ul.left {
	text-align: left ;
	font-size: 11px;
	font-weight: bolder;
}



 #bread ul li {

	display: inline ;

	a{
			color: #fff;
			
			padding: 2px 7px 2px 7px;
			margin-right: 5px;
			-moz-border-radius: 5px;
			border-radius: 5px;
	}

	.crumbs{
		background-color: #D2E0D5;
	}
	.rewiev{
		background-color: #b3f4c3;
	}
	.gold{
		background-color: #b3e4f4;
	}
	.comments{
		background-color: #D2E0D5
	}
	.positive_vote{
		background-color: #b3f4c3
	}
	.negative_vote{
		background-color: #F4C3B3
	}
	.red{
		background-color: #F4C3B3;
	}

	a:hover{
			color: #fff;
			background-color: #c3b3f4;
			padding: 2px 7px 2px 7px;
			margin-right: 5px;

	}

}



